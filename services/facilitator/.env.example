# T402 Facilitator Service Configuration

# Server
PORT=8080
ENVIRONMENT=development

# Redis
REDIS_URL=redis://localhost:6379
# Required in production (docker-compose.prod.yaml)
REDIS_PASSWORD=

# Grafana (required in production)
GRAFANA_PASSWORD=

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# ===================
# API Key Authentication
# ===================
# Comma-separated list of API keys with optional names: "key1:name1,key2:name2"
# If set, requests without a valid API key will be rejected
API_KEYS=
# Set to true to require API keys for all requests (except /health, /ready, /metrics, /supported)
API_KEY_REQUIRED=false

# ===================
# EVM Configuration
# ===================
EVM_PRIVATE_KEY=

# RPC Endpoints (use your own for production)
ETH_RPC=https://eth.llamarpc.com
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc
BASE_RPC=https://mainnet.base.org
OPTIMISM_RPC=https://mainnet.optimism.io
INK_RPC=https://rpc-gel.inkonchain.com
BERACHAIN_RPC=https://bartio.rpc.berachain.com
UNICHAIN_RPC=https://mainnet.unichain.org

# ===================
# TON Configuration
# ===================
TON_MNEMONIC=
TON_RPC=https://toncenter.com/api/v2/jsonRPC
TON_TESTNET_RPC=https://testnet.toncenter.com/api/v2/jsonRPC

# ===================
# TRON Configuration
# ===================
TRON_PRIVATE_KEY=
TRON_RPC=https://api.trongrid.io

# ===================
# Solana Configuration
# ===================
SVM_PRIVATE_KEY=
SOLANA_RPC=https://api.mainnet-beta.solana.com
