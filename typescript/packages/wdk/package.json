{
  "name": "@t402/wdk",
  "version": "2.0.1",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "scripts": {
    "start": "tsx --env-file=.env index.ts",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "watch": "tsc --watch",
    "format": "prettier -c .prettierrc --write \"**/*.{ts,js,cjs,json,md}\"",
    "format:check": "prettier -c .prettierrc --check \"**/*.{ts,js,cjs,json,md}\"",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts"
  },
  "keywords": [
    "t402",
    "payment",
    "protocol",
    "wdk",
    "tether",
    "usdt",
    "usdt0",
    "wallet"
  ],
  "license": "Apache-2.0",
  "author": "T402 Team",
  "repository": "https://github.com/t402-io/t402",
  "description": "T402 Payment Protocol integration with Tether Wallet Development Kit (WDK)",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@ledgerhq/hw-app-eth": "^7.1.1",
    "@ledgerhq/hw-transport-web-ble": "^6.30.0",
    "@ledgerhq/hw-transport-webhid": "^6.30.11",
    "@ledgerhq/hw-transport-webusb": "^6.29.15",
    "@trezor/connect": "^9.7.1",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "eslint-plugin-prettier": "^5.2.6",
    "prettier": "3.5.2",
    "tsup": "^8.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@t402/core": "workspace:*",
    "@t402/evm": "workspace:*",
    "viem": "^2.44.2"
  },
  "peerDependencies": {
    "@ledgerhq/hw-app-eth": ">=6.0.0",
    "@ledgerhq/hw-transport-web-ble": ">=6.0.0",
    "@ledgerhq/hw-transport-webhid": ">=6.0.0",
    "@ledgerhq/hw-transport-webusb": ">=6.0.0",
    "@tetherto/wdk": ">=1.0.0-beta.0",
    "@tetherto/wdk-wallet-evm": ">=1.0.0-beta.0",
    "@trezor/connect": ">=9.0.0"
  },
  "peerDependenciesMeta": {
    "@tetherto/wdk": {
      "optional": true
    },
    "@tetherto/wdk-wallet-evm": {
      "optional": true
    },
    "@ledgerhq/hw-app-eth": {
      "optional": true
    },
    "@ledgerhq/hw-transport-webusb": {
      "optional": true
    },
    "@ledgerhq/hw-transport-webhid": {
      "optional": true
    },
    "@ledgerhq/hw-transport-web-ble": {
      "optional": true
    },
    "@trezor/connect": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ]
}
